    name = "go_default_library",
    srcs = ["main.go"],
    importpath = "github.com/pelletier/go-toml/cmd/tomljson",
    visibility = ["//visibility:private"],
    deps = ["//vendor/github.com/pelletier/go-toml:go_default_library"],
)

